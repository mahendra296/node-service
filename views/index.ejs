      <!-- Loan Calculator Section -->
      <section class="calculator-section">
        <div class="section-container">
          <div class="section-header">
            <span class="section-badge">Loan Calculator</span>
            <h2>Calculate Your Monthly Payment</h2>
            <p>
              Use our calculator to estimate your loan payments and plan your
              finances.
            </p>
          </div>
          <div class="calculator-wrapper">
            <div class="calculator-form">
              <div class="calc-input-group">
                <label for="loanAmount">Loan Amount</label>
                <div class="input-with-prefix">
                  <span class="prefix">$</span>
                  <input
                    type="number"
                    id="loanAmount"
                    value="50000"
                    min="1000"
                    max="1000000"
                  />
                </div>
                <input
                  type="range"
                  id="loanAmountRange"
                  min="1000"
                  max="500000"
                  value="50000"
                  class="range-slider"
                />
              </div>
              <div class="calc-input-group">
                <label for="interestRate">Interest Rate</label>
                <div class="input-with-suffix">
                  <input
                    type="number"
                    id="interestRate"
                    value="8.5"
                    min="1"
                    max="30"
                    step="0.1"
                  />
                  <span class="suffix">%</span>
                </div>
                <input
                  type="range"
                  id="interestRateRange"
                  min="1"
                  max="20"
                  value="8.5"
                  step="0.1"
                  class="range-slider"
                />
              </div>
              <div class="calc-input-group">
                <label for="loanTerm">Loan Term</label>
                <div class="input-with-suffix">
                  <input
                    type="number"
                    id="loanTerm"
                    value="36"
                    min="6"
                    max="360"
                  />
                  <span class="suffix">months</span>
                </div>
                <input
                  type="range"
                  id="loanTermRange"
                  min="6"
                  max="120"
                  value="36"
                  class="range-slider"
                />
              </div>
              <button
                class="btn-primary btn-lg btn-full"
                onclick="calculateLoan()"
              >
                Calculate Payment
              </button>
            </div>
            <div class="calculator-results">
              <div class="result-card main-result">
                <span class="result-label">Monthly Payment</span>
                <span class="result-value" id="monthlyPayment">$1,576.32</span>
              </div>
              <div class="result-details">
                <div class="result-card">
                  <span class="result-label">Total Payment</span>
                  <span class="result-value" id="totalPayment">$56,747.52</span>
                </div>
                <div class="result-card">
                  <span class="result-label">Total Interest</span>
                  <span class="result-value" id="totalInterest">$6,747.52</span>
                </div>
              </div>
              <a href="/register" class="btn-primary btn-lg btn-full"
                >Apply for Loan</a
              >
            </div>
          </div>
        </div>
      </section>

