              <tr>
                <td>Mathematics</td>
                <td>100</td>
                <td>92</td>
                <td>92%</td>
                <td><span class="grade grade-a">A+</span></td>
              </tr>
              <tr>
                <td>Science</td>
                <td>100</td>
                <td>88</td>
                <td>88%</td>
                <td><span class="grade grade-a">A</span></td>
              </tr>
              <tr>
                <td>Social Studies</td>
                <td>100</td>
                <td>78</td>
                <td>78%</td>
                <td><span class="grade grade-b">B+</span></td>
              </tr>
              <tr>
                <td>Hindi</td>
                <td>100</td>
                <td>82</td>
                <td>82%</td>
                <td><span class="grade grade-a">A</span></td>
              </tr>
              <tr>
                <td>Computer Science</td>
                <td>100</td>
                <td>95</td>
                <td>95%</td>
                <td><span class="grade grade-a">A+</span></td>
              </tr>
              <tr>
                <td>Physical Education</td>
                <td>100</td>
                <td>90</td>
                <td>90%</td>
                <td><span class="grade grade-a">A+</span></td>
              </tr>
              <tr class="total-row">
                <td>TOTAL</td>
                <td>700</td>
                <td>610</td>
                <td>87.14%</td>
                <td><span class="grade grade-a">A</span></td>
              </tr>
            </tbody>
          </table>

          <!-- Summary Cards -->
          <div class="summary-section">
            <div class="summary-card">
              <div class="summary-label">Total Marks</div>
              <div class="summary-value">610/700</div>
            </div>
            <div class="summary-card">
              <div class="summary-label">Percentage</div>
              <div class="summary-value">87.14%</div>
            </div>
            <div class="summary-card">
              <div class="summary-label">Overall Grade</div>
              <div class="summary-value">A</div>
            </div>
          </div>

          <!-- Attendance -->
          <h2 class="section-title">üìÖ Attendance Record</h2>
          <div class="attendance-section">
            <div
              style="
                display: flex;
                justify-content: space-between;
                margin-bottom: 10px;
              "
            >
              <span><strong>Total Working Days:</strong> 200</span>
              <span><strong>Days Present:</strong> 192</span>
              <span><strong>Days Absent:</strong> 8</span>
            </div>
            <div class="attendance-bar">
              <div class="attendance-fill" style="width: 96%">
                96% Attendance
              </div>
            </div>
          </div>

          <!-- Co-Curricular Activities -->
          <h2 class="section-title">üèÜ Co-Curricular Activities</h2>
          <table class="marks-table">
            <thead>
