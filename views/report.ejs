          <div class="report-title">Student Report Card</div>
        </div>

        <!-- Body -->
        <div class="report-body">
          <!-- Student Information -->
          <div class="student-info">
            <div class="info-item">
              <span class="info-label">Student Name:</span>
              <span class="info-value">Rajesh Kumar Patel</span>
            </div>
            <div class="info-item">
