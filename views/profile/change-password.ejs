<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Password - AlisterBank</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../header') %>

    <main>
      <section class="profile-section">
        <div class="section-container">
          <div class="back-link">
            <a href="/profile">
              <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Back to Profile
            </a>
          </div>

          <div class="profile-content">
            <div class="profile-card profile-card-centered">
              <div class="card-header-icon">
                <svg width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <h2>Change Password</h2>
              <p class="card-description">Enter your current password and choose a new password to update your account security.</p>

              <form id="changePasswordFormElement">
                <div class="input-group">
                  <label for="currentPassword">Current Password</label>
                  <div class="password-input-wrapper">
                    <input
                      type="password"
                      id="currentPassword"
                      name="currentPassword"
                      placeholder="Enter current password"
                      required
                    />
                    <button type="button" class="password-toggle" onclick="togglePasswordVisibility('currentPassword')">
                      <svg class="eye-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <div class="input-group">
                  <label for="newPassword">New Password</label>
                  <div class="password-input-wrapper">
                    <input
                      type="password"
                      id="newPassword"
                      name="newPassword"
                      placeholder="Enter new password"
                      required
                    />
                    <button type="button" class="password-toggle" onclick="togglePasswordVisibility('newPassword')">
                      <svg class="eye-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <div class="input-group">
                  <label for="confirmNewPassword">Confirm New Password</label>
                  <div class="password-input-wrapper">
                    <input
                      type="password"
                      id="confirmNewPassword"
                      name="confirmNewPassword"
                      placeholder="Confirm new password"
                      required
                    />
                    <button type="button" class="password-toggle" onclick="togglePasswordVisibility('confirmNewPassword')">
                      <svg class="eye-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <div id="password-match-error" class="verification-message error" style="display: none;"></div>
                <div id="change-password-message" class="verification-message"></div>

                <div class="form-actions">
                  <button type="submit" class="btn-primary" id="change-password-btn">Update Password</button>
                  <a href="/profile" class="btn-outline">Cancel</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>

    <%- include('../footer') %>

    <script>
      function togglePasswordVisibility(inputId) {
        const input = document.getElementById(inputId);
        const button = input.parentElement.querySelector('.password-toggle');

        if (input.type === 'password') {
          input.type = 'text';
          button.innerHTML = `
            <svg class="eye-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
            </svg>
          `;
        } else {
          input.type = 'password';
          button.innerHTML = `
            <svg class="eye-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          `;
        }
      }

      function validatePasswordMatch() {
        const newPassword = document.getElementById('newPassword').value;
        const confirmPassword = document.getElementById('confirmNewPassword').value;
        const errorDiv = document.getElementById('password-match-error');

        if (confirmPassword && newPassword !== confirmPassword) {
          errorDiv.textContent = 'Passwords do not match';
          errorDiv.style.display = 'block';
          return false;
        }
        errorDiv.style.display = 'none';
        return true;
      }

      document.getElementById('confirmNewPassword')?.addEventListener('input', validatePasswordMatch);
      document.getElementById('newPassword')?.addEventListener('input', function() {
        if (document.getElementById('confirmNewPassword').value) {
          validatePasswordMatch();
        }
      });

      document.getElementById('changePasswordFormElement')?.addEventListener('submit', async function(e) {
        e.preventDefault();

        if (!validatePasswordMatch()) {
          return;
        }

        const currentPassword = document.getElementById('currentPassword').value;
        const newPassword = document.getElementById('newPassword').value;
        const submitBtn = document.getElementById('change-password-btn');
        const message = document.getElementById('change-password-message');

        submitBtn.disabled = true;
        submitBtn.textContent = 'Updating...';
        message.textContent = '';
        message.className = 'verification-message';

        try {
          const response = await fetch('/change-password', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ currentPassword, newPassword }),
          });

          const data = await response.json();

          if (data.success) {
            message.textContent = 'Password changed successfully! Redirecting...';
            message.className = 'verification-message success';
            setTimeout(() => {
              window.location.href = '/profile';
            }, 2000);
          } else {
            message.textContent = data.message || 'Failed to change password';
            message.className = 'verification-message error';
          }
        } catch (error) {
          message.textContent = 'An error occurred. Please try again.';
          message.className = 'verification-message error';
        } finally {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Update Password';
        }
      });
    </script>
  </body>
</html>
